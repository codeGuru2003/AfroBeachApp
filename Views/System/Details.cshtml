@model SystemInfo
@{
    ViewData["Title"] = "Manage System - Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    String? base64 = Convert.ToBase64String(Model.Logo);
    String? logo = string.Format("data:image/gif;base64, {0}", base64);
}
<div class="container-fluid p-3">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <img src="@logo" height="350" class="card-img-top" alt="...">
                <div class="card-body p-3">
                    <a class="btn btn-primary" asp-action="Index">Back To List</a>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card">
                <div class="card-header">Details</div>
                <div class="card-body">
                    <div class="form-group m-3">
                        <input type="text" asp-for=Name placeholder="System Name" readonly class="form-control">
                    </div>
                    <div class="form-group m-3">
                        <textarea type="text" asp-for=Description placeholder="System Description" readonly class="form-control"></textarea>
                    </div>
                    <div class="form-group m-3">
                        <input asp-for=EmailAddress placeholder="Email Address" readonly class="form-control">
                    </div>
                    <div class="form-group m-3">
                        <input asp-for=Address placeholder="Address" readonly class="form-control">
                    </div>
                    <div class="form-group m-3">
                        <input asp-for=TelephoneNumber placeholder="Telephone Number" readonly class="form-control">
                    </div>
                    <div class="form-group m-3">
                        <input asp-for=ServiceHour placeholder="Service Hour" readonly class="form-control">
                    </div>
                    <div class="form-group m-3">
                        <input asp-for=FacebookUrl placeholder="Facebook Url (Optional)" readonly class="form-control">
                    </div>
                    <div class="form-group m-3">
                        <input asp-for=TikTokUrl placeholder="Tiktok Url (Optional)" readonly class="form-control">
                    </div>
                    <div class="form-group m-3">
                        <input asp-for=InstagramUrl placeholder="Instagram Url (Optional)" readonly class="form-control">
                    </div>
                    <div class="form-group m-3">
                        <input asp-for=TwitterUrl placeholder="Twitter Url (Optional)" readonly class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>