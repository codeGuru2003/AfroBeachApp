@model IEnumerable<AfroBeachApp.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">List of Product Categories</div>
            <div class="card-body">
                <a asp-action="create" asp-controller="productcategories" class="btn btn-primary m-3"><i class="bi bi-plus-circle-fill"></i> Add New Record</a>
                <div class="table-responsive">
                    <table class="table table-striped datatable nowrap">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a asp-action="edit"  asp-route-Id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i></a> |
                                        <a asp-action="details"  asp-route-Id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-book"></i></a> |
                                        <a asp-action="delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>