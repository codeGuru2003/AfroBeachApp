@model SystemInfo
@{
    ViewData["Title"] = "Manage System - Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid p-3">
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card">
                <div class="card-header">Edit System Record</div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-action="edit">
                        <div class="form-group m-3">
                            <label class="form-label">System Logo</label>
                            <input type="file" name="file" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <input type="text" asp-for=Name placeholder="System Name" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <textarea type="text" asp-for=Description placeholder="System Description" class="form-control"></textarea>
                        </div>
                        <div class="form-group m-3">
                            <input asp-for=EmailAddress placeholder="Email Address" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <input asp-for=Address placeholder="Address" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <input asp-for=TelephoneNumber placeholder="Telephone Number" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <input asp-for=ServiceHour placeholder="Service Hour" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <input asp-for=FacebookUrl placeholder="Facebook Url (Optional)" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <input asp-for=TikTokUrl placeholder="Tiktok Url (Optional)" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <input asp-for=InstagramUrl placeholder="Instagram Url (Optional)" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <input asp-for=TwitterUrl placeholder="Twitter Url (Optional)" class="form-control">
                        </div>
                        <div class="form-group m-3">
                            <button type="submit" class="btn btn-warning">Update</button>  |
                            <a asp-action="index" asp-controller="system" class="btn btn-primary">Back</a> 
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>