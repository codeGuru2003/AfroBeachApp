@model IEnumerable<SystemInfo>
@{
    ViewData["Title"] = "Manage System";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">Manage System</div>
        <div class="card-body">
            <a asp-action="create" asp-controller="system" class="btn btn-primary m-3"><i class="bi bi-plus-circle-fill"></i> Add New Record</a>
            <div class="table-responsive">
                <table class="table table-striped nowrap datatable">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Telephone Number</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.TelephoneNumber</td>
                                <td>
                                    <a asp-action="edit" asp-controller="system" asp-route-Id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i></a> |
                                    <a asp-action="details" asp-controller="system" asp-route-Id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-book-fill"></i></a> |
                                    <a asp-action="delete" asp-controller="system" asp-route-Id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>