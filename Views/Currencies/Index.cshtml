@model IEnumerable<AfroBeachApp.Models.Currency>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">List of Currencies</div>
            <div class="card-body">
                <a asp-action="create" asp-controller="currencies" class="btn btn-primary m-3"><i class="bi bi-plus-circle-fill"></i> Add New Record</a>
                <div class="table-responsive">
                    <table class="table table-striped datatable nowrap">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Code</th>
                                <th>Exchange Rate</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Code</td>
                                    <td>@item.ExchangeRate</td>
                                    <td>

                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>