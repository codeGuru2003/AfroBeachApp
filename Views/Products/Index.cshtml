                @Html.DisplayNameFor(model => model.Image3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyOneAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyTwo)
            </th>
