
@{
    ViewData["Title"] = "Manage System - Create Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-10">
       <div class="card">
           <div class="card-header">Create Role</div>
           <div class="card-body">
                <form asp-action="createrole" asp-controller="account" method="post">
                    <div class="form-group m-3">
                        <input class="form-control" name="roleName" placeholder="Role Name" />
                    </div>
                    <div class="form-group m-3">
                        <button type="submit" class="btn btn-primary">Create</button> |
                        <a class="btn btn-dark" asp-action="roles" asp-controller="account">Back To List</a>
                    </div>
                </form>
           </div>
       </div>
    </div>
</div>