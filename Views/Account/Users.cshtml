@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Manage System - Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}
<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                List of Users
            </div>
            <div class="card-body">
                <a asp-action="createuser" asp-controller="account" class="btn btn-success m-3"><i class="bi bi-plus-circle-fill"></i> Add New Record</a>
                <div class="table-responsive">
                    <table class="table table-striped datatable nowrap">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Phone Number</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <a asp-action="edituser" asp-controller="account" asp-route-Id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i></a> |
                                        <a asp-action="userdetails" asp-controller="account" asp-route-Id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-book"></i></a> |
                                        <a asp-action="deleteuser" asp-controller="account" asp-route-Id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>