@model AfroBeachApp.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">Create Shop Product</div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group m-3">
                        <label asp-for="ProductCategoryID" class="control-label"></label>
                        @Html.DropDownList("ProductCategoryID", (SelectList)ViewBag.ProductCategoryID, "Select Category", new { @class = "form-control" })
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="ShortDescription" class="control-label"></label>
                        <input asp-for="ShortDescription" class="form-control" />
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="Image1" class="control-label">Image 1 (Required)</label>
                        <input type="file" accept=".jpg,.png,.gif" name="Image1" class="form-control" />
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="Image2" class="control-label">Image 2 (Optional)</label>
                        <input type="file" accept=".jpg,.png,.gif" name="Image2" class="form-control" />
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="Image3" class="control-label">Image 3 (Optional)</label>
                        <input type="file" accept=".jpg,.png,.gif" name="Image3" class="form-control" />
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="Image4" class="control-label">Image 4 (Optional)</label>
                        <input type="file" accept=".jpg,.png,.gif" class="form-control" name="Image4" />
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="CurrencyOneID" class="control-label"></label>
                        <select asp-for="CurrencyOneID" class="form-control" asp-items="ViewBag.CurrencyOneID"></select>
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="CurrencyOneAmount" class="control-label"></label>
                        <input asp-for="CurrencyOneAmount" class="form-control" />
                        <span asp-validation-for="CurrencyOneAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group m-3">
                        <input type="submit" value="Create" class="btn btn-success" /> |
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
